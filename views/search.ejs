<!DOCTYPE html>
<html>

<head>
  <title>VideoTube</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <%- include('head'); %>
</head>

<body>
  <%- include('navbar', {user}); %>
  <div class="container pt-3">
    <div class="row">
      <div class="col">
        <h1>Search</h1>
        <h3>Search results for '<%- query %>'</h3>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="list-group">
          <% results.forEach(video => { %>
            <a href="/videos/<%= video.id %>" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= video.title  %></h5>
                <small><%= new Date(video.uploadDate).toLocaleString('fi-FI', {timeZone: 'UTC'}) %></small>
              </div>
              <p class="mb-1"><%= video.description %></p>
              <small>Uploaded by <%= video.user %>.</small>
            </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</body>

</html>